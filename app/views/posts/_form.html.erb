<%= form_with(model: post, class: "max-w-xl mx-auto bg-white rounded-xl shadow-md p-6 space-y-6") do |form| %>

  <% if post.errors.any? %>
    <div class="rounded-lg bg-red-50 border border-red-200 p-4">
      <p class="font-semibold text-red-700 mb-2">
        Something went wrong
      </p>
      <ul class="text-sm text-red-600 list-disc list-inside">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  
  <div>
    <%= form.label :title, class: "text-sm font-semibold text-gray-800" %>
    <%= form.text_field :title,
        placeholder: "e.g. Looking for DB study group",
        class: "mt-2 w-full rounded-lg border-gray-300 px-4 py-2.5 text-gray-900
                focus:border-blue-500 focus:ring-2 focus:ring-blue-500" %>
  </div>

  
  <div>
    <%= form.label :body, class: "text-sm font-semibold text-gray-800" %>
    <%= form.textarea :body, rows: 5,
        placeholder: "Describe what you're looking for...",
        class: "mt-2 w-full rounded-lg border-gray-300 px-4 py-2.5 text-gray-900
                focus:border-blue-500 focus:ring-2 focus:ring-blue-500 resize-none" %>
  </div>

  
  <div>
    <%= form.label :course_id, "Category", class: "text-sm font-semibold text-gray-800" %>
    <%= form.collection_select :course_id, @courses, :id, :title,
        { prompt: "Choose a course" },
        class: "mt-2 w-full rounded-lg border-gray-300 bg-white px-4 py-2.5
                focus:border-blue-500 focus:ring-2 focus:ring-blue-500" %>
  </div>

  
    <%= form.submit "Publish",
        class: "px-6 py-2.5 rounded-lg bg-blue-600 text-white font-semibold
                hover:bg-blue-700 focus:ring-2 focus:ring-blue-500" %>
  </div>

<% end %>