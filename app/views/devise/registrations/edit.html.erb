<div class="min-h-[70vh] flex items-center justify-center">
  <div class="w-full max-w-5xl px-4 sm:px-6 lg:px-8 space-y-8">
    <!-- Top navigation -->
    <div class="flex justify-between items-center">
      <%= link_to "← Back to posts",
          posts_path,
          class: "text-sm text-gray-500 hover:text-gray-900" %>
      <span class="text-sm text-gray-400">
        Account settings
      </span>
    </div>

    <!-- Update profile card -->
    <div class="bg-white rounded-2xl shadow-md border border-gray-200 p-6 space-y-6">
      <div class="text-center">
        <h2 class="text-2xl font-semibold text-gray-900">
          Edit profile
        </h2>
        <p class="text-sm text-gray-500 mt-1">
          Update your account information
        </p>
      </div>

      <%= render "devise/shared/error_messages", resource: resource %>

      <%= form_for(resource,
          as: resource_name,
          url: registration_path(resource_name),
          html: { method: :put, class: "space-y-4" }) do |f| %>

        <div>
          <%= f.label :username, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :username,
              class: "w-full rounded-lg border-gray-300 px-4 py-2.5
                      focus:border-blue-500 focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email,
              autocomplete: "email",
              class: "w-full rounded-lg border-gray-300 px-4 py-2.5
                      focus:border-blue-500 focus:ring-2 focus:ring-blue-500" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p class="text-sm text-yellow-600">
            Waiting confirmation for <strong><%= resource.unconfirmed_email %></strong>
          </p>
        <% end %>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <p class="text-xs text-gray-500 mb-1">
            Leave blank if you don’t want to change it
          </p>
          <%= f.password_field :password,
              autocomplete: "new-password",
              class: "w-full rounded-lg border-gray-300 px-4 py-2.5
                      focus:border-blue-500 focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation,
              autocomplete: "new-password",
              class: "w-full rounded-lg border-gray-300 px-4 py-2.5
                      focus:border-blue-500 focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
          <%= f.label :current_password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <p class="text-xs text-gray-500 mb-1">
            Required to confirm changes
          </p>
          <%= f.password_field :current_password,
              autocomplete: "current-password",
              class: "w-full rounded-lg border-gray-300 px-4 py-2.5
                      focus:border-blue-500 focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
          <%= f.submit "Update profile",
              class: "w-full rounded-lg bg-blue-600 py-2.5 text-white font-semibold
                      hover:bg-blue-700 focus:ring-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>

    <div class="bg-white rounded-2xl shadow-md border border-gray-200 p-6 space-y-6">
      <div class="space-y-3 text-sm">
        <%= button_to "Logout",
            destroy_user_session_path,
            method: :delete,
            data: { turbo_confirm: "Are you sure you want to log out?" },
            class: "w-full rounded-lg border border-gray-300 py-2.5 font-medium
                    hover:bg-gray-50" %>
      </div>
    </div>
  </div>
</div>
