<div class="min-h-[70vh] flex items-center justify-center">
  <div class="w-full max-w-md bg-white rounded-2xl shadow-md border border-gray-200 p-6 space-y-6">

    
    <div class="text-center">
      <h2 class="text-2xl font-semibold text-gray-900">Log in</h2>
      <p class="text-sm text-gray-500 mt-1">
        Welcome back
      </p>
    </div>

    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email,
            autofocus: true,
            autocomplete: "email",
            class: "w-full rounded-lg border-gray-300 px-4 py-2.5
                    focus:border-blue-500 focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password,
            autocomplete: "current-password",
            class: "w-full rounded-lg border-gray-300 px-4 py-2.5
                    focus:border-blue-500 focus:ring-2 focus:ring-blue-500" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center gap-2 text-sm text-gray-600">
          <%= f.check_box :remember_me,
              class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Log in",
            class: "w-full rounded-lg bg-blue-600 py-2.5 text-white font-semibold
                    hover:bg-blue-700 focus:ring-2 focus:ring-blue-500" %>
      </div>

    <% end %>

    
    <div class="text-center text-sm text-gray-500">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
