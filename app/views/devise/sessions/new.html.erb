<div class="min-h-[70vh] flex items-center justify-center">
  <div class="w-full max-w-md space-y-4">

    <!-- Main panel: local login -->
    <div class="bg-white rounded-2xl shadow-md border border-gray-200 p-6 space-y-6">
      <div class="text-center">
        <h2 class="text-2xl font-semibold text-gray-900">Log in</h2>
        <p class="text-sm text-gray-500 mt-1">Welcome back</p>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              class: "w-full rounded-lg border-gray-300 px-4 py-2.5 focus:border-blue-500 focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password,
              autocomplete: "current-password",
              class: "w-full rounded-lg border-gray-300 px-4 py-2.5 focus:border-blue-500 focus:ring-2 focus:ring-blue-500" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center gap-2 text-sm text-gray-600">
            <%= f.check_box :remember_me, class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div>
          <%= f.submit "Log in",
              class: "w-full rounded-lg bg-blue-600 py-2.5 text-white font-semibold hover:bg-blue-700 focus:ring-2 focus:ring-blue-500" %>
        </div>

      <% end %>

      <div class="text-center text-sm text-gray-500">
        <%= link_to "Sign up", new_registration_path(resource_name), class: "hover:text-gray-700" %>
      </div>
    </div>

    <!-- Divider -->
    <div class="relative">
      <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t border-gray-200"></div>
      </div>
      <div class="relative flex justify-center text-xs">
        <span class="bg-gray-50 px-2 text-gray-400">or</span>
      </div>
    </div>

    <!-- Separate panel: Google -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-4">
      <%= button_to user_google_oauth2_omniauth_authorize_path,
          method: :post,
          data: { turbo: false },
          class: "w-full inline-flex items-center justify-center gap-3 rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm font-semibold text-gray-900 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500" do %>
        <svg class="h-5 w-5" viewBox="0 0 48 48" aria-hidden="true">
          <path fill="#FFC107" d="M43.611 20.083H42V20H24v8h11.303C33.689 32.657 29.166 36 24 36c-6.627 0-12-5.373-12-12s5.373-12 12-12c3.059 0 5.842 1.154 7.961 3.039l5.657-5.657C34.046 6.053 29.268 4 24 4 12.955 4 4 12.955 4 24s8.955 20 20 20 20-8.955 20-20c0-1.341-.138-2.65-.389-3.917z"/>
          <path fill="#FF3D00" d="M6.306 14.691l6.571 4.819C14.655 16.108 19.003 12 24 12c3.059 0 5.842 1.154 7.961 3.039l5.657-5.657C34.046 6.053 29.268 4 24 4 16.318 4 9.656 8.337 6.306 14.691z"/>
          <path fill="#4CAF50" d="M24 44c5.166 0 9.86-1.977 13.409-5.197l-6.19-5.238C29.153 35.091 26.715 36 24 36c-5.144 0-9.653-3.314-11.267-7.946l-6.523 5.025C9.52 39.556 16.227 44 24 44z"/>
          <path fill="#1976D2" d="M43.611 20.083H42V20H24v8h11.303a11.96 11.96 0 0 1-4.084 5.565l.003-.002 6.19 5.238C36.971 39.205 44 34 44 24c0-1.341-.138-2.65-.389-3.917z"/>
        </svg>
        Continue with Google
      <% end %>
    </div>

  </div>
</div>
