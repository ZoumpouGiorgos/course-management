<turbo-frame id="chat_modal">
  <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
    <div class="absolute inset-0 bg-black/50 backdrop-blur-sm"></div>

    <div class="relative w-full max-w-lg overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-2xl">

      <div class="flex items-center justify-between border-b border-gray-100 px-5 py-4 bg-gradient-to-r from-purple-50 to-white">
        <div class="text-base font-bold text-gray-900">Add Contact</div>
        <%= link_to close_chat_modal_path, data: { turbo_frame: "chat_modal" },
              class: "h-9 w-9 rounded-full hover:bg-gray-100 flex items-center justify-center text-gray-500 transition" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        <% end %>
      </div>

      <div class="p-5">
        <div class="mb-4">
          <label class="block text-sm font-semibold text-gray-700 mb-2">Search People</label>

          <%= form_with url: new_contact_path, method: :get, data: { turbo_frame: "chat_modal" } do |f| %>
            <div class="flex gap-2">
              <%= f.text_field :q,
                value: @q,
                placeholder: "Search by username or email...",
                class: "w-full rounded-xl border border-gray-200 px-4 py-2.5 text-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition" %>

              <%= f.submit "Search",
                class: "shrink-0 rounded-xl bg-purple-600 px-4 py-2.5 text-sm font-semibold text-white hover:bg-purple-700 transition shadow-sm" %>
            </div>
          <% end %>

          <% if @q.present? %>
            <div class="mt-2 text-xs text-gray-500">
              Showing results for <span class="font-semibold text-gray-700">“<%= @q %>”</span>
              · <%= link_to "Clear", new_contact_path, data: { turbo_frame: "chat_modal" }, class: "text-purple-600 hover:underline" %>
            </div>
          <% end %>
        </div>

        <div class="border border-gray-200 rounded-xl overflow-hidden">
          <div class="max-h-72 overflow-y-auto divide-y divide-gray-100">
            <% if @users.any? %>
              <% @users.each do |user| %>
                <div class="flex items-center gap-3 px-4 py-3 hover:bg-purple-50 transition-colors user-item"
                     data-username="<%= user.username.to_s.downcase %>"
                     data-email="<%= user.email.to_s.downcase %>">

                  <div class="shrink-0">
                    <%= render "shared/avatar", user: user, link: false %>
                  </div>

                  <div class="min-w-0 flex-1">
                    <div class="text-sm font-semibold text-gray-900 truncate">
                      <%= user.username.presence || "User ##{user.id}" %>
                    </div>
                    <div class="text-xs text-gray-500 truncate"><%= user.email %></div>
                  </div>

                  <%= button_to "Add",
                    contacts_path(contact_user_id: user.id),
                    method: :post,
                    data: { turbo_frame: "chat_modal" },
                    class: "shrink-0 rounded-lg bg-purple-600 px-3 py-1.5 text-xs font-semibold text-white hover:bg-purple-700 transition shadow-sm" %>

                </div>
              <% end %>
            <% else %>
              <div class="px-4 py-8 text-center">
                <div class="text-sm font-semibold text-gray-800">No users found</div>
                <div class="mt-1 text-xs text-gray-500">Try a different search.</div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>

  <script>
    (() => {
      const frame = document.getElementById("chat_modal");
      if (!frame) return;

      const searchInput = frame.querySelector('input[name="q"]');
      const userItems = frame.querySelectorAll('.user-item');

      if (!searchInput) return;

      searchInput.addEventListener('input', (e) => {
        const searchTerm = (e.target.value || '').toLowerCase().trim();
        userItems.forEach(item => {
          const username = (item.dataset.username || '');
          const email = (item.dataset.email || '');
          const match = username.includes(searchTerm) || email.includes(searchTerm);
          item.style.display = match ? 'flex' : 'none';
        });
      });
    })();
  </script>
</turbo-frame>
