<turbo-frame id="chat_modal">
  <!-- Backdrop -->
  <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
    <div class="absolute inset-0 bg-black/40 backdrop-blur-sm" onclick="this.closest('turbo-frame').src = '<%= close_chat_modal_path %>'"></div>

    <!-- Panel -->
    <div class="relative w-full max-w-3xl bg-white rounded-2xl shadow-2xl flex flex-col" style="height: 85vh; max-height: 700px;">

      <!-- Header -->
      <div class="flex items-center gap-4 px-6 py-4 border-b border-gray-200 bg-white rounded-t-2xl shrink-0">
        <% others = @conversation.participants.where.not(id: current_user.id) %>
        <% title = @conversation.title.presence || others.map(&:username).join(", ") %>

        <!-- Group Avatar or Single Avatar -->
        <% if others.size == 1 %>
          <%= render "shared/avatar", user: others.first, link: false %>
        <% else %>
          <div class="inline-flex items-center justify-center rounded-full bg-gradient-to-br from-purple-500 to-pink-500 text-white font-bold select-none shrink-0 ring-2 ring-purple-100"
               style="width: 2.5rem; height: 2.5rem; font-size: 0.875rem;">
            <%= @conversation.participants.count %>
          </div>
        <% end %>

        <div class="flex-1 min-w-0">
          <div class="text-base font-bold text-gray-900 truncate"><%= title %></div>
          <div class="text-xs text-gray-500">
            <%= pluralize(@conversation.participants.count, "member") %>
          </div>
        </div>

        <%= link_to close_chat_modal_path,
          data: { turbo_frame: "chat_modal" },
          class: "shrink-0 h-10 w-10 rounded-full hover:bg-gray-100 flex items-center justify-center text-gray-400 hover:text-gray-600 transition" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        <% end %>
      </div>

      <%= turbo_stream_from "conversation_#{@conversation.id}" %>

      <!-- Messages Area -->
      <div class="flex-1 overflow-y-auto bg-gradient-to-b from-gray-50 to-white">
        <div id="messages" class="px-6 py-6 space-y-6">
          <%= render partial: "messages/message",
            collection: @messages,
            as: :message,
            locals: { current_user_id: current_user.id } %>
        </div>
      </div>

      <!-- Composer -->
      <div class="border-t border-gray-200 px-6 py-4 bg-white rounded-b-2xl shrink-0">
        <%= form_with model: [@conversation, @message],
                      class: "flex items-end gap-3",
                      data: { turbo: true } do |f| %>

          <%= f.text_area :body,
                placeholder: "Type a message...",
                autocomplete: "off",
                rows: 1,
                class: "flex-1 rounded-xl border border-gray-300 bg-white px-4 py-3 text-sm text-gray-900 placeholder:text-gray-400 resize-none overflow-hidden focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition max-h-32",
                onkeydown: "if(event.key === 'Enter' && !event.shiftKey) { event.preventDefault(); this.form.requestSubmit(); }",
                oninput: "this.style.height='auto'; this.style.height=Math.min(this.scrollHeight,128)+'px'; this.style.overflowY='hidden';" %>

          <%= f.button type: "submit",
                class: "shrink-0 inline-flex items-center justify-center rounded-xl bg-purple-600 h-11 w-11 text-white shadow-sm hover:bg-purple-700 active:scale-95 transition disabled:opacity-50 disabled:cursor-not-allowed" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
            </svg>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</turbo-frame>
