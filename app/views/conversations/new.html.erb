<turbo-frame id="chat_modal">
  <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
    <div class="absolute inset-0 bg-black/50 backdrop-blur-sm"></div>

    <div class="relative w-full max-w-lg overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-2xl">

      <div class="flex items-center justify-between border-b border-gray-100 px-5 py-4 bg-gradient-to-r from-purple-50 to-white">
        <div class="text-base font-bold text-gray-900">New Group Chat</div>
        <%= link_to close_chat_modal_path, data: { turbo_frame: "chat_modal" },
              class: "h-9 w-9 rounded-full hover:bg-gray-100 flex items-center justify-center text-gray-500 transition" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        <% end %>
      </div>

      <div class="p-5">
        <%= form_with url: conversations_path, method: :post, data: { turbo_frame: "chat_modal" } do %>

          <div class="mb-5">
            <label class="block text-sm font-semibold text-gray-700 mb-2">
              Chat Title <span class="text-gray-400 font-normal">(optional)</span>
            </label>
            <%= text_field_tag :title, nil,
                  placeholder: "Enter a name for this chat...",
                  class: "w-full rounded-xl border border-gray-200 px-4 py-2.5 text-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition" %>
          </div>

          <div class="mb-5">
            <label class="block text-sm font-semibold text-gray-700 mb-3">
              Add People
            </label>

            <div class="border border-gray-200 rounded-xl overflow-hidden">

              <div class="p-3 border-b border-gray-100 bg-gray-50">
                <input type="text"
                       id="user-search"
                       placeholder="Search by username or email..."
                       class="w-full px-3 py-2 text-sm border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
              </div>

              <div class="max-h-64 overflow-y-auto divide-y divide-gray-100">
                <% if @users.any? %>
                  <% @users.each do |user| %>
                    <label class="flex items-center gap-3 px-4 py-3 hover:bg-purple-50 cursor-pointer transition-colors group user-item"
                           data-username="<%= user.username.to_s.downcase %>"
                           data-email="<%= user.email.to_s.downcase %>">

                      <input type="checkbox"
                             name="user_ids[]"
                             value="<%= user.id %>"
                             class="w-5 h-5 text-purple-600 border-gray-300 rounded focus:ring-purple-500 focus:ring-2 transition">

                      <div class="shrink-0">
                        <%= render "shared/avatar", user: user, link: false %>
                      </div>

                      <div class="min-w-0 flex-1">
                        <div class="text-sm font-semibold text-gray-900 truncate">
                          <%= user.username.presence || "User ##{user.id}" %>
                        </div>
                        <div class="text-xs text-gray-500 truncate">
                          <%= user.email %>
                        </div>
                      </div>

                      <svg class="w-5 h-5 text-purple-600 opacity-0 group-has-[:checked]:opacity-100 transition shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                    </label>
                  <% end %>
                <% else %>
                  <div class="px-4 py-8 text-center">
                    <div class="text-sm font-semibold text-gray-800">No users found</div>
                    <div class="mt-1 text-xs text-gray-500">Try a different search.</div>
                  </div>
                <% end %>
              </div>
            </div>

            <p class="mt-2 text-xs text-gray-500">
              <span id="selected-count">0</span> people selected
            </p>
          </div>

          <div class="flex justify-end gap-3 pt-2">
            <%= link_to "Cancel", close_chat_modal_path,
                  data: { turbo_frame: "chat_modal" },
                  class: "rounded-xl px-5 py-2.5 text-sm font-semibold text-gray-700 hover:bg-gray-100 transition" %>
            <%= submit_tag "Create Chat",
                  class: "rounded-xl bg-purple-600 px-5 py-2.5 text-sm font-semibold text-white hover:bg-purple-700 transition shadow-sm" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <script>
    (() => {
      const frame = document.getElementById("chat_modal");
      if (!frame) return;

      const searchInput = frame.querySelector('#user-search');
      const userItems = frame.querySelectorAll('.user-item');

      if (searchInput) {
        searchInput.addEventListener('input', (e) => {
          const searchTerm = (e.target.value || '').toLowerCase().trim();
          userItems.forEach(item => {
            const username = item.dataset.username || '';
            const email = item.dataset.email || '';
            const match = username.includes(searchTerm) || email.includes(searchTerm);
            item.style.display = match ? 'flex' : 'none';
          });
        });
      }

      const countSpan = frame.querySelector('#selected-count');
      const checkboxes = frame.querySelectorAll('input[name="user_ids[]"]');

      function updateCount() {
        const checkedCount = frame.querySelectorAll('input[name="user_ids[]"]:checked').length;
        if (countSpan) countSpan.textContent = checkedCount;
      }

      checkboxes.forEach(cb => cb.addEventListener('change', updateCount));
      updateCount();
    })();
  </script>
</turbo-frame>
